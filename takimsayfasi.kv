				AsyncImage:
					id: _logo
					source: ""
				
				Label:
					id: _takim
					text: ""
				
			BoxLayout:
				
				orientation: "vertical"
				spacing: 0
				
				BoxLayout:
					
					Label:
				
						text: "Kulüp Kodu"
					
					Label:
						id: _kod
						text: ""
				
				BoxLayout:
				
					Label:
					
						text: "Şehir:"
					
					
					
					Label:
						
						id: _sehir	
						text: ""
				
				BoxLayout:
					
					spacing: 0
					
					Label:
					
						text: "Kulüp Adresi:"
					
					Label:
						
						id: _adres	
						text: ""
				
				BoxLayout:
					
					spacing: 0
					Label:
					
